                <b-navbar-brand href="/Home/Index">筆試習題服務</b-navbar-brand>
                <b-navbar-toggle
                    target="nav-collapse"
                ></b-navbar-toggle>

                <b-collapse id="nav-collapse" is-nav>
                    <b-navbar-nav>
                        <b-nav-item href="/Account/About" disabled>
                            <b-icon 
                            icon="info-circle-fill" 
                            variant="light"
                            class="mr-1"
                            ></b-icon>關於
                        </b-nav-item>
                    </b-navbar-nav>

                    <!-- Right aligned nav items -->
                    <b-navbar-nav class="ml-auto">
                        <partial name="_NavLoginPartial.cshtml" />
                        @* @await Html.PartialAsync("_NavLoginPartial");*@
                    </b-navbar-nav>
                </b-collapse>
            </div>
        </b-navbar>
    </header>
    <main>
        <div class="container py-5"> 
            @RenderBody()
        </div>
    </main>

    <script src="~/js/common.js"></script>
    <script>
        let vue_nav = new Vue({
            el:'#vue_nav',
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

